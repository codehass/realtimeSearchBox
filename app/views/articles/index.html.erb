<h1 class="text-4xl font-bold mb-6 text-gray-800">All Articles</h1>
<%= form_with url: articles_path, method: :get, local: true, class: "flex space-x-4 mb-8" do |form| %>
  <%= form.text_field :query,
      placeholder: "Search for articles",
      class: "flex-1 px-4 py-2 rounded-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-lg" %>

  <%= form.submit "Search",
      class: "px-5 py-2 bg-blue-600 text-white rounded-sm hover:bg-blue-700 transition cursor-pointer" %>
<% end %>

<% if @articles.any? %>
<% @articles.each do |article| %>
  <div class="bg-white rounded-sm shadow-sm p-6 mb-3">
    <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= article.title %></h2>
    <p class="text-gray-600"><%= truncate(article.content, length: 100) %></p>
  </div>
<% end %>
<% else %>
  <p class="text-gray-500 text-center">No articles found for your search. Try different keywords or <span class="text-black font-bold"><%= link_to 'browse all articles', articles_path %></span>!</p>
<% end %>